            case 5:
                displayHistory(history);
                 printf("1.Retour \n2.Quitter\n");
                do { scanf("%d",&choicecase);} while ( choicecase!=1 && choicecase!=2 );
                if (choicecase==2){  printf("Merci d'avoir utiliser le Gestionnaire de Liste de Courses.\n");}
